        {
          "Host": "localhost",
          "Port": 7079
        }
      ],
      "UpstreamPathTemplate": "/api/users/{everything}",
      "UpstreamHttpMethod": [ "Post", "Get", "Put", "Delete" ],
      "Priority": 1,
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "OcelotAuthScheme",
        "AllowedScopes": []
      },
      "AddClaimsToRequest": [
        {
          "Type": "sub",
          "Value": "{claim_value}",
          "Key": "X-User-ID"
        }
      ]
    },

